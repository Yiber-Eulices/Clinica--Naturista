<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Modelo.Medicamento" table="medicamento">
        <id name="idmedicamento" column="id_medicamento">
            <generator class="identity" />
        </id>
        <property name="codigo" type="string" column="codigo" />
        <property name="nombre" type="string" column="nombre" />
        <property name="precio" type="double" column="precio" />
        <property name="cantidad" type="int" column="cantidad_disponible" />
        <property name="descripcion" type="string" column="descripcion" />
        <property name="foto" type="string" column="fotoProduc" />
    </class>
</hibernate-mapping>
